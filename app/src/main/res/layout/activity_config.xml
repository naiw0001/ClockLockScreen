<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.inwon.clocklockscreen.LockConfigure">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="잠금화면 시계"
        android:textSize="40dp"
        android:id="@+id/maintext"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright ⓒ 2017 MR.LEE(LEE SANG HUN). All right ® reserved."
        android:layout_below="@id/maintext"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:textSize="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TEST"
        android:id="@+id/test"
        android:layout_centerInParent="true"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setimg"
        android:layout_below="@+id/test"
        android:layout_centerHorizontal="true"
        android:text="내 이미지 사용"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stop"
        android:text="멈춤"
        android:layout_alignParentBottom="true"
        android:onClick="lock"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/stop"
        android:id="@+id/start"
        android:text="시작"
        android:onClick="lock"/>

</RelativeLayout>
